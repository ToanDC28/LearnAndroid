<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinearLayout1">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5b39c6"
            android:padding="15sp"
            android:text="@string/linear_layout"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffea00"
            android:text="@string/android"
            android:textSize="25sp"
            android:textColor="#b22222"
            />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ebff"
            android:text="@string/php"
            android:textSize="25sp"
            android:textColor="#b22222"
            />
        <TextView
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff9f"
            android:text="@string/sql"
            android:textSize="25sp"
            android:textColorHint="#ffea00"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffbb00"
            android:text="@string/python"
            android:textSize="25sp"
            android:textColorHint="#00ebff"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>